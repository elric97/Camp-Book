<% include ./partials/header %>

<div class="container">
    <div class="row">
         <h1 class="text-center">Sign Up</h1>
         <!--Styled to center the form-->
         <div style="width: 30%; margin: 3% auto;">
             <form method="POST" action="/register">
                 <!-- For spacing b/w the form elements we use class="form-group" -->
                 <div class="form-group">
                     <input type="email" name="email" placeholder="email id" class="form-control" required>
                 </div>
                 <div class="form-group">
                     <input type="text" name="username" placeholder="username" class="form-control" required>
                 </div>
                 <div class="form-group">
                     <input type="password" name="password" placeholder="password" class="form-control" required>
                 </div>
                 <div class="form-group">
                     <input type="text" name="city" placeholder="city" class="form-control" required>
                 </div>
                 <div class="form-group">
                     <input type="text" name="contact" placeholder="Contact number" pattern="[789][0-9]{9}" title="10 digits starting with 7/8/9" class="form-control" required>
                 </div>
                 <div class="form-group">
                     <button class="btn btn-lg btn-success btn-block">Submit</button>
                 </div>
             </form>
             <p>
                 <!--class="btn-block" just takes the size of the parent element-->
                 Already have an account?
                 <a href="/login">Click Here!</a>
             </p>
         </div>
    </div>
</div>




<% include ./partials/footer %>
