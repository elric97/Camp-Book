        <li data-target="#mycarousel" data-slide-to="4"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
          <div class="carousel-caption" id="content">
                <h1>Welcome To CampBook</h1>
                <h3></h3>
                <hr>
                <a class="btn btn-default btn-lg" href="/campgrounds"><i class="fa fa-hand-o-down" aria-hidden="true"></i> Get Started</a>
                <a class="btn btn-default btn-lg" id="about"><i class="fa fa-hand-o-down" aria-hidden="true"></i> About Us</a>  
          </div>
        <div class="item">
