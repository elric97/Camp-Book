            <!-- <div class="carousel-caption">
                <h3>First Image</h3>
            </div> -->
        </div>
        <div class="item">
            <img src="https://images.unsplash.com/photo-1487730116645-74489c95b41b?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=1080&fit=max&s=ee413266c2b4438b00a53be2bc214420" data-color="firebrick" alt="Second Image">
            <!-- <div class="carousel-caption">
                <h3>Second Image</h3>
            </div> -->
        </div>
        <div class="item">
            <img src="https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=1080&fit=max&s=f95bf08e6a79c84d1ffcec22b84e00fa" data-color="violet" alt="Third Image">
            <!-- <div class="carousel-caption">
                <h3>Third Image</h3>
            </div> -->
        </div>
        <div class="item">
            <img src="https://images.unsplash.com/photo-1475483768296-6163e08872a1?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=1080&fit=max&s=1d66376c242918833319d4d00849f44d" data-color="lightgreen" alt="Fourth Image">
